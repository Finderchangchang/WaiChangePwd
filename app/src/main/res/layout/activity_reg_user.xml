<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="liuliu.waichangepwd.ui.LoginActivity">

    <RelativeLayout
        android:id="@+id/top_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorhei"
        android:gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/title_iv_left"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/title_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号管理"
            android:textColor="@color/colorwrite"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/title_help"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/title_wen" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_tb">

        <LinearLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3BA8DB"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@mipmap/main_bg_" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/usr_name_et"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/btn_login1"
                    android:hint="请输入登录名"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingLeft="35dp" />

                <EditText
                    android:id="@+id/pwd_et"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/btn_login2"
                    android:hint="请输入密码"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingLeft="35dp"
                    android:digits="@string/filter_vcode"
                    android:password="true" />

                <EditText
                    android:id="@+id/pwd_et2"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/btn_login2"
                    android:hint="请确认输入密码"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingLeft="35dp"
                    android:digits="@string/filter_vcode"
                    android:password="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:text="*密码长度为6个字符，只能包含数字和字母" />

                <ImageButton
                    android:id="@+id/login_reg"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/zhuce" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_bottem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="QQ3042661036"
            android:textColor="@color/colorwrite" />

        <ImageView

            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/login_bottem" />
    </RelativeLayout>

</RelativeLayout>
