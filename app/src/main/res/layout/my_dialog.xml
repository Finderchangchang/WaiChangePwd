<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:id="@+id/rl_dialog_all"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@mipmap/dialog_phone">
        <EditText
            android:id="@+id/middle_et_ll_dialog"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/ensure_btn_ll_dialog"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/middle_et_ll_dialog_mes"
            android:layout_marginBottom="35dp"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/dialog_edit"
            android:minLines="2" />


        <ImageView
            android:id="@+id/ensure_btn_ll_dialog"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:elevation="1dp"
            android:src="@mipmap/dialog_save"
            android:text="保存"
            android:textColor="#fff"
            android:textSize="15sp"></ImageView>

    </RelativeLayout>
</RelativeLayout>