<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg">

        <ImageView
            android:layout_width="60dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/dialog_title" />

        <TextView
            android:id="@+id/dialog_titlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="查看帮助"
            android:textSize="18dp"
            android:textColor="@color/colorwrite"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/dialog_et_yu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/dialog_et2"
            android:paddingTop="30dp"
            android:paddingRight="60dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/dialog_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_et_yu"
            android:text="输入openid"
            android:textColor="@color/colorwrite"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_type"
            android:src="@mipmap/qq"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/qq_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dialog_qq"
            android:text="3042661036"
            android:textColor="@color/colorwrite"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/dialog_type"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/ensure_btn_ll_dialog"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/dialog_et_yu"
           android:layout_alignParentRight="true"
            android:src="@mipmap/dialog_save"
            android:text="保存"
            android:textColor="#fff"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"></ImageView>
    </RelativeLayout>

</LinearLayout>