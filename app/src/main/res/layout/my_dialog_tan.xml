<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        android:padding="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/dialog_title" />

        <TextView
            android:id="@+id/dialog_titlename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="查看帮助"
            android:textSize="20dp"
            android:textColor="@color/colorwrite"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_titlename"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_dialog_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorwrite"
                android:maxLines="2"
                android:minLines="2" />

            <ImageView
                android:id="@+id/dialog_yu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/yu" />
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_et_yu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/dialog_et" />

        <TextView
            android:id="@+id/dialog_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_et_yu"
            android:text="输入OPENID"
            android:textColor="@color/colorwrite"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/dialog_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_type"
            android:src="@mipmap/qq" />

        <TextView
            android:id="@+id/qq_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dialog_qq"
            android:text="QQ3042661036"
            android:textColor="@color/colorwrite"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/dialog_type"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/ensure_btn_ll_dialog"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/dialog_type"
           android:layout_alignParentRight="true"
            android:src="@mipmap/dialog_save"
            android:text="保存"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:textSize="15sp"></ImageView>
    </RelativeLayout>

</LinearLayout>